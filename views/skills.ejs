      var pos = [];
        // $('.num-ins-toggle').click(function(){
        //   $('.num-instruction').slideToggle();
        // })

        $('.skill-list li').click(function(){
          var idx = $(this).parent().attr('data-pos')
          var nth = $(this).index()/2;
          if(pos[idx] === nth){
            return;
          }else{
            pos[idx] = nth;
          }
          var parent = $(this).parent();
          var color = parent.siblings('h3').css('color');
          var p = parent.siblings('.skill-desc').find('p');
          parent.find('li').css('border-bottom', 'none');
          $(this).css('border-bottom', '2px solid ' + color);
          p.css('display', 'none');
          p.eq(nth).fadeIn();
        })
        $('.see-all').click(function(e){
          e.preventDefault();
          var p = $(this).parent().siblings('.skill-desc').find('p');
          p.css('display', 'block');
        })
    });
</script>
