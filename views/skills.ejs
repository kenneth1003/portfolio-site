  <script>
    $(document).ready(function(){
      var interval = 120;
        setTimeout(function(){$('.right--animation-1').css('right', 0).css('opacity', 1)}, 1*interval)
        setTimeout(function(){$('.right--animation-3').css('right', 0).css('opacity', 1)}, 2*interval)
